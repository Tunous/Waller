<schemalist gettext-domain="gnome-shell-extensions">
    <schema id="org.gnome.shell.extensions.waller"
        path="/org/gnome/shell/extensions/waller/">

        <key name="show-panel-icon" type="b">
            <default>true</default>
            <summary>Show panel icon</summary>
            <description>
                If true, show icon in main panel
            </description>
        </key>

        <key name="interval" type="i">
            <default>60</default>
            <summary>Interval (in seconds)</summary>
            <description>
                The interval of wallpaper updates
            </description>
        </key>

        <key name="update-lockscreen-wallpaper" type="b">
            <default>true</default>
            <summary>Update lockscreen wallpaper</summary>
            <description>
                If true, update lockscreen together with desktop wallpaper
            </description>
        </key>

        <key name="update-on-launch" type="b">
            <default>true</default>
            <summary>Update wallpaper on launch</summary>
            <description>
                If true, update wallpaper immediately on startup
            </description>
        </key>
    </schema>
</schemalist>